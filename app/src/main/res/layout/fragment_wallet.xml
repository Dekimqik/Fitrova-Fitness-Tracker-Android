<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitness.fitrova.fragment.FTWalletFragment">

    <LinearLayout
        android:id="@+id/lltop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivTitle"
            android:layout_width="@dimen/padding_50dp"
            android:layout_height="@dimen/padding_50dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:layout_gravity="center"
            android:src="@drawable/wallet"/>

        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_marginTop="@dimen/padding_10dp"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:layout_marginRight="@dimen/padding_15dp"
            android:layout_below="@id/tvTitle"/>

        <ImageView
            android:id="@+id/ivMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/frv_mark"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:layout_centerInParent="true"
                android:gravity="left"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBalance"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Balance"
                    android:textColor="@color/yellow_900"
                    android:textSize="@dimen/padding_25dp"/>

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9.94896 FRV"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="22dp"/>

                <TextView
                    android:id="@+id/btnSendBalance"
                    android:background="@drawable/round_corner_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_50dp"
                    android:paddingRight="@dimen/padding_50dp"
                    android:paddingTop="@dimen/padding_10dp"
                    android:paddingBottom="@dimen/padding_10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Send Balance"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/btnTransactionHistory"
                    android:background="@drawable/round_corner_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_25dp"
                    android:paddingRight="@dimen/padding_25dp"
                    android:paddingTop="@dimen/padding_10dp"
                    android:paddingBottom="@dimen/padding_10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Transaction History"
                    android:textSize="20dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</FrameLayout>
